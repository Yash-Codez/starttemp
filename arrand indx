  int n = sc.nextInt();
        int[][] arr = new int[n][2]; // arr[i][0] = value, arr[i][1] = index
        
        for (int i = 0; i < n; i++) {
            int x = sc.nextInt();
            arr[i][0] = x;
            arr[i][1] = i;
        }

        // sort by value (arr[i][0])
        Arrays.sort(arr, (a, b) -> Integer.compare(a[0], b[0]));
